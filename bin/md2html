#!/bin/bash

if [ -z "$1" ] ; then
   echo "Usage: md2html FILE.md > FILE.html"
   exit 1
fi

echo '<html><head>'
echo '<meta charset="utf-8">'
# echo '<link rel="stylesheet" href="static/costituzione.css">'
echo '<style>'
cat ../static/costituzione.css
echo '</style>'
echo '<script>'
cat ../static/link_articoli.js
echo '</script>'
echo '</head><body>'
markdown "$1"
echo '</body></html>'
